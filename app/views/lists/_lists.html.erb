<% if(!@lists.empty?) %> 

<h2>Listas</h2>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.nombre %></td>
        <td><%= link_to 'ver lista ',list %> | 
        <%= link_to ' borrar', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>

  <h2>No hay Tareas</h2>

<% end %>